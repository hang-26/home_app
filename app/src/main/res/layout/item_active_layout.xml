<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/dp8"
    android:paddingBottom="@dimen/dp8"
    android:elevation="@dimen/_50dp"
    android:background="@drawable/custom_item_describle_content"
    >

    <ImageView
        android:id="@+id/ivmAvatar"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginVertical="@dimen/dp8"
        android:src="@drawable/account"
        />

    <TextView
        android:id="@+id/tvUserPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivmAvatar"
        app:layout_constraintStart_toEndOf="@id/ivmAvatar"
        app:layout_constraintBottom_toBottomOf="@id/ivmAvatar"
        android:layout_marginHorizontal="@dimen/dp16"
        android:text="Tên người dùng"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivmAvatar"
        app:layout_constraintStart_toStartOf="@id/ivmAvatar"
        android:layout_marginVertical="@dimen/dp8"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvContent"
        app:layout_constraintStart_toStartOf="@id/tvContent"
        android:layout_marginVertical="@dimen/dp8"
        android:text="Gias"
        android:textStyle="bold"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintStart_toStartOf="@id/tvPrice"
        android:padding="@dimen/dp8"
        android:layout_marginVertical="@dimen/dp8"
        android:background="@drawable/custom_content"
        android:text="Trạng thái"
        />




</androidx.constraintlayout.widget.ConstraintLayout>