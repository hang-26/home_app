<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:paddingBottom="@dimen/dp8"
    android:elevation="@dimen/dp30"
    android:background="@drawable/custom_item_describle_content"
    android:layout_marginHorizontal="5dp"
    >

    <ImageView
        android:id="@+id/ivmAvatar"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginVertical="@dimen/dp8"
        android:src="@drawable/account"
        />

    <TextView
        android:id="@+id/tvUserPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivmAvatar"
        app:layout_constraintStart_toEndOf="@id/ivmAvatar"
        app:layout_constraintBottom_toBottomOf="@id/ivmAvatar"
        android:layout_marginHorizontal="@dimen/dp16"
        android:textSize="@dimen/_14sp"
        android:text="Tên người dùng"
        android:textStyle="bold"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivmAvatar"
        app:layout_constraintStart_toStartOf="@id/ivmAvatar"
        android:layout_marginVertical="@dimen/dp8"
        android:textSize="@dimen/_12sp"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvContent"
        app:layout_constraintStart_toStartOf="@id/tvContent"
        android:layout_marginVertical="@dimen/dp8"
        android:text="Gias"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="@dimen/_12sp"

        />

    <TextView
        android:id="@+id/tvState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Trạng thái"
        android:gravity="center"
        android:background="@color/custom_color_content1"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintWidth_percent="0.2"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/black"
        />




</androidx.constraintlayout.widget.ConstraintLayout>