<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FD9C26"
    tools:context=".login.SignupActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavRegister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.2"
        app:lottie_rawRes="@raw/animation_register"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"

        />
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lavRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Register"
        android:textSize="@dimen/sp30"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/edtUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvRegister"
        android:layout_marginVertical="@dimen/dp8"
        android:layout_marginHorizontal="@dimen/dp16"
        android:minHeight="@dimen/dp48"
        android:background="@drawable/custom_edt_signup"
        android:paddingVertical="@dimen/dp8"
        android:paddingLeft="@dimen/dp40"
        android:hint="Email"
        />
    <ImageView
        android:id="@+id/ivEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edtUserEmail"
        app:layout_constraintTop_toTopOf="@id/edtUserEmail"
        app:layout_constraintBottom_toBottomOf="@id/edtUserEmail"
        android:src="@drawable/icon_email"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtUserEmail"
        android:layout_marginVertical="@dimen/dp8"
        android:layout_marginHorizontal="@dimen/dp16"
        android:minHeight="@dimen/dp48"
        android:background="@drawable/custom_edt_signup"
        android:paddingVertical="@dimen/dp8"
        android:paddingLeft="@dimen/dp40"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        />
    <ImageView
        android:id="@+id/ivPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edtPass"
        app:layout_constraintTop_toTopOf="@id/edtPass"
        app:layout_constraintBottom_toBottomOf="@id/edtPass"
        android:src="@drawable/icon_password"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/ivViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/edtPass"
        app:layout_constraintTop_toTopOf="@id/edtPass"
        app:layout_constraintBottom_toBottomOf="@id/edtPass"
        android:src="@drawable/icon_eye"
        android:layout_marginRight="10dp"
        />
    <EditText
        android:id="@+id/edtRePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtPass"
        android:layout_marginVertical="@dimen/dp8"
        android:layout_marginHorizontal="@dimen/dp16"
        android:minHeight="@dimen/dp48"
        android:background="@drawable/custom_edt_signup"
        android:paddingVertical="@dimen/dp8"
        android:paddingLeft="@dimen/dp40"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        />
    <ImageView
        android:id="@+id/ivRePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edtRePass"
        app:layout_constraintTop_toTopOf="@id/edtRePass"
        app:layout_constraintBottom_toBottomOf="@id/edtRePass"
        android:src="@drawable/icon_password"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/ivViewReEnterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/edtRePass"
        app:layout_constraintTop_toTopOf="@id/edtRePass"
        app:layout_constraintBottom_toBottomOf="@id/edtRePass"
        android:src="@drawable/icon_eye"
        android:layout_marginRight="10dp"
        />
    <EditText
        android:id="@+id/edtNameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtRePass"
        android:layout_marginVertical="@dimen/dp8"
        android:layout_marginHorizontal="@dimen/dp16"
        android:minHeight="@dimen/dp48"
        android:background="@drawable/custom_edt_signup"
        android:paddingVertical="@dimen/dp8"
        android:paddingLeft="@dimen/dp40"
        android:hint="Tên người dùng"
        />
    <ImageView
        android:id="@+id/ivUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edtNameUser"
        app:layout_constraintTop_toTopOf="@id/edtNameUser"
        app:layout_constraintBottom_toBottomOf="@id/edtNameUser"
        android:src="@drawable/icon_user"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/edtAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtNameUser"
        android:layout_marginVertical="@dimen/dp8"
        android:layout_marginHorizontal="@dimen/dp16"
        android:minHeight="@dimen/dp48"
        android:background="@drawable/custom_edt_signup"
        android:paddingVertical="@dimen/dp8"
        android:paddingLeft="@dimen/dp40"
        android:hint="Ngày sinh"
        android:inputType="date"
        />
    <ImageView
        android:id="@+id/ivBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edtAge"
        app:layout_constraintTop_toTopOf="@id/edtAge"
        app:layout_constraintBottom_toBottomOf="@id/edtAge"
        android:src="@drawable/icon_calendar"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtAge"
        android:layout_marginVertical="@dimen/dp8"
        android:layout_marginHorizontal="@dimen/dp16"
        android:minHeight="@dimen/dp48"
        android:background="@drawable/custom_edt_signup"
        android:paddingVertical="@dimen/dp8"
        android:paddingLeft="@dimen/dp40"
        android:hint="Địa chỉ"
        />
    <ImageView
        android:id="@+id/ivAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edtAddress"
        app:layout_constraintTop_toTopOf="@id/edtAddress"
        app:layout_constraintBottom_toBottomOf="@id/edtAddress"
        android:src="@drawable/icon_address"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/edtNumberPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtAddress"
        android:layout_marginVertical="@dimen/dp8"
        android:layout_marginHorizontal="@dimen/dp16"
        android:minHeight="@dimen/dp48"
        android:background="@drawable/custom_edt_signup"
        android:paddingVertical="@dimen/dp8"
        android:paddingLeft="@dimen/dp40"
        android:hint="Số điện thoại"
        />
    <ImageView
        android:id="@+id/ivPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edtNumberPhone"
        app:layout_constraintTop_toTopOf="@id/edtNumberPhone"
        app:layout_constraintBottom_toBottomOf="@id/edtNumberPhone"
        android:src="@drawable/icon_phone"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/btSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNumberPhone"
        android:layout_marginHorizontal="@dimen/dp16"
        android:text="Signup"
        android:backgroundTint="#FEB930"
        />
</androidx.constraintlayout.widget.ConstraintLayout>