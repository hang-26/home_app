<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_list"
    android:layout_marginVertical="@dimen/dp8"
    android:layout_marginHorizontal="5dp"
    android:elevation="@dimen/dp30"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/imvLabelList"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/dp8"
        android:src="@drawable/ic_add"
        />
    <TextView
        android:id="@+id/tvListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imvLabelList"
        app:layout_constraintStart_toStartOf="@id/imvLabelList"
        app:layout_constraintEnd_toEndOf="@id/imvLabelList"
        android:layout_marginVertical="@dimen/dp8"
        android:textSize="9sp"
        android:text="tên danh mục"
        />
</androidx.constraintlayout.widget.ConstraintLayout>