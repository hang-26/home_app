<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.account.InfoAccountActivity">

    <ImageView
        android:id="@+id/imvBackgroundAvatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/house"
        app:layout_constraintHeight_percent="0.3"
        />

    <ImageView
        android:id="@+id/imvSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/dp16"
        android:src="@drawable/ic_setting"
        />
    <ImageView
        android:id="@+id/imvAvatar"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp100"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="@id/imvBackgroundAvatar"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/imvBackgroundAvatar"
        app:layout_constraintTop_toTopOf="@id/imvBackgroundAvatar"
        android:src="@drawable/icon_user"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imvAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="User Name"
        android:textStyle="bold"
        android:textSize="@dimen/sp18"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/imvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/icon_location"
        android:layout_marginHorizontal="@dimen/dp16"
        />
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toEndOf="@id/imvAddress"
        app:layout_constraintTop_toTopOf="@id/imvAddress"
        app:layout_constraintBottom_toBottomOf="@id/imvAddress"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/imvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imvAddress"
        app:layout_constraintTop_toBottomOf="@id/imvAddress"
        android:src="@drawable/icon_phone_black"
        />
    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imvPhoneNumber"
        app:layout_constraintStart_toEndOf="@id/imvAddress"
        app:layout_constraintBottom_toBottomOf="@id/imvPhoneNumber"
        android:text="0367674891"
        />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imvPhoneNumber"
        app:layout_constraintStart_toStartOf="@id/imvPhoneNumber"
        android:layout_marginHorizontal="@dimen/dp16"
        android:text="Đánh giá: "
        />
    <TextView
        android:id="@+id/tvYourPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvRate"
        app:layout_constraintStart_toStartOf="@id/tvRate"
        app:layout_constraintEnd_toEndOf="@id/tvRate"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginVertical="@dimen/dp8"
        android:text="Bài viết của bạn"
        android:textSize="@dimen/sp18"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvYourPost"
        app:layout_constraintStart_toStartOf="@id/tvYourPost"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginVertical="@dimen/dp8"
        />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginVertical="@dimen/dp40"
        android:elevation="@dimen/dp16"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>