<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DetailPostFragment">

    <ImageView
        android:id="@+id/imvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/cafesua1"
        app:layout_constraintHeight_percent="0.25"
    />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imvContent"
        app:layout_constraintStart_toStartOf="@id/imvContent"
        app:layout_constraintEnd_toEndOf="@id/imvContent"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginVertical="@dimen/dp8"
        android:text="nội dung"
        android:textStyle="bold"
        android:textSize="@dimen/sp20"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvContent"
        app:layout_constraintStart_toStartOf="@id/tvContent"
        app:layout_constraintWidth_percent="0.55"
        android:layout_marginVertical="@dimen/dp8"
        android:text="Giá tiền"
        android:textSize="@dimen/sp18"
        android:textStyle="bold"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/tvTimeWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvPrice"
        app:layout_constraintTop_toTopOf="@id/tvPrice"
        app:layout_constraintStart_toEndOf="@id/tvPrice"
        android:textStyle="bold"
        android:text="Thoiwf gian"
        />

    <TextView
        android:id="@+id/tvCate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintStart_toStartOf="@id/tvContent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/dp16"
        android:layout_marginHorizontal="@dimen/dp16"
        android:text="Danh mục"
        android:textSize="@dimen/sp18"
        android:textStyle="bold"
        android:elevation="@dimen/dp1"
        />
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvCate"
        app:layout_constraintTop_toBottomOf="@id/tvCate"
        android:layout_marginVertical="@dimen/dp8"
        android:textStyle="bold"
        android:text="DDiaj chir"
        />
    <TextView
        android:id="@+id/tvDescribeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        app:layout_constraintStart_toStartOf="@id/tvContent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/dp16"
        android:layout_marginHorizontal="@dimen/dp16"
        android:text="Mô tả"
        android:textSize="@dimen/sp20"
        android:textStyle="bold"
        android:elevation="@dimen/dp1"
        />

    <TextView
        android:id="@+id/tvDescribe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescribeLabel"
        app:layout_constraintStart_toStartOf="@id/tvContent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/dp16"
        android:layout_marginHorizontal="@dimen/dp16"
        android:padding="@dimen/dp8"
        app:layout_constraintHeight_percent="0.4"
        android:text="Nội dung mô tả"
        android:textSize="@dimen/sp20"
        android:textStyle="bold"
        android:elevation="@dimen/dp1"
        android:background="@drawable/custom_item_describle_content"
        />
    <Button
        android:id="@+id/btnWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDescribe"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/dp16"
        android:text="Nhận việc"
        />



</androidx.constraintlayout.widget.ConstraintLayout>