<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dp30"
    android:layout_marginVertical="@dimen/dp8"
    android:background="@drawable/custom_content"
    >

    <ImageView
        android:id="@+id/ivmAvatar"
        android:layout_width="150dp"
        android:layout_height="@dimen/dp80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="@dimen/dp8"
        android:src="@drawable/nha_cua"
        />


    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivmAvatar"
        app:layout_constraintStart_toStartOf="@id/ivmAvatar"
        android:layout_marginVertical="@dimen/dp8"
        android:layout_marginHorizontal="@dimen/dp16"
        android:padding="@dimen/dp8"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvContent"
        app:layout_constraintStart_toStartOf="@id/tvContent"
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginVertical="@dimen/dp8"
        android:text="Gias"
        android:textStyle="bold"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/tvState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        android:layout_marginVertical="@dimen/dp8"
        android:background="@color/custom_color_secondary"
        android:padding="@dimen/dp8"
        android:text="Trạng thái"
        android:textColor="@color/white"
        />




</androidx.constraintlayout.widget.ConstraintLayout>